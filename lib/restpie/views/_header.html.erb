<style>
	header {
/*		margin: 10px;*/
	} 
	header ul {
		float: left;
		width: 100%;
		padding: 5px;
		margin: 0;
		list-style-type: none;
		border: 1px solid #d1d1d1;
		border-radius: 5px;
		background-color: #dfdfdf;
	}
	header ul a {
		float: left;
		text-decoration: none;
		color: #000000;
		padding: 5px 10px;
		border-right: 1px solid white;
		font-size: 1.2em;
	}
	header ul a:hover {
		background-color: #000000;
		color: #dfdfdf;
	}

	header ul li {
		display: inline;
	}
</style>
<ul>
<% @applications.each do |application, data| %>
	<li><%= link_to application, url_for(:applications, :show, :application_id => application), :relative => false %></li>
<% end %>
</ul>